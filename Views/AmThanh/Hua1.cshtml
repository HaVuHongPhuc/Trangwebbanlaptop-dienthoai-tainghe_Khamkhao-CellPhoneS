@{
    ViewBag.Title = "HuaweiFreebudsPro4";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/AmThanh/hua1.png"
                 alt="Tai nghe Huawei Freebuds Pro 4"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Thiết kế hiện đại, sang trọng, nhỏ gọn phù hợp với nhiều lứa tuổi.</li>
                    <li>Trang bị công nghệ khử tiếng ồn chủ động (ANC) tiên tiến, loại bỏ tạp âm hiệu quả.</li>
                    <li>Thời lượng pin lâu dài, hỗ trợ sạc nhanh, tiện lợi cho người thường xuyên di chuyển.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Tai nghe không dây Huawei Freebuds Pro 4</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">3.420.000₫</p>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/p/h/photo_2024-12-31_14-52-31.jpg">
                        Xanh lá
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/t/a/tai-nghe-khong-day-huawei-freebuds-pro-4_4__1.png">
                        Đen
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr>
                <td>Kích thước</td>
                <td>Tai nghe: 29.1 x 21.8 x 23.7 mm • Hộp sạc: 46.9 x 65.9 x 24.5 mm</td>
            </tr>
            <tr>
                <td>Trọng lượng</td>
                <td>Tai nghe: 5.8 g (mỗi chiếc) • Hộp sạc: 47 g</td>
            </tr>
            <tr>
                <td>Công nghệ âm thanh</td>
                <td>HD Spatial Audio</td>
            </tr>
            <tr><td>Micro</td><td>Có</td></tr>
            <tr>
                <td>Thời lượng Pin</td>
                <td>Tai nghe: 7 giờ • Hộp sạc: 33 giờ</td>
            </tr>
            <tr>
                <td>Phương thức điều khiển</td>
                <td>Cảm ứng chạm</td>
            </tr>
            <tr><td>Hãng sản xuất</td><td>Huawei</td></tr>
        </table>
    </div>

    <!-- Script JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
