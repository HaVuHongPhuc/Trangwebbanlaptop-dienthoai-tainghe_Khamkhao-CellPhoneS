@{
    ViewBag.Title = "SonyWHCH720N";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="https://cdn2.cellphones.com.vn/358x/media/catalog/product/s/o/sony-wh-ch720n-p.png"
                 alt="Tai nghe Sony WH-CH720N"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Cảm biến tiếng ồn kép giúp loại bỏ mọi tiếng ồn xung quanh, đắm chìm trong âm nhạc.</li>
                    <li>Thoải mái nghe nhạc với thiết kế gọn nhẹ, êm ái và thời gian nghe nhạc lên đến 50 giờ.</li>
                    <li>Bộ xử lý tích hợp V1 và âm thanh kỹ thuật số (DSEE) cho âm thanh chất lượng cao.</li>
                    <li>Cải tiến về công nghệ, nâng cao chất lượng cuộc gọi giúp đàm thoại rõ ràng.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Tai nghe Bluetooth chụp tai Sony WH-CH720N</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">2.490.000₫</p>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/s/o/sony-wh-ch720n-p.png">
                        Hồng
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/w/h/wh-ch720_blue01_m_1__1.png">
                        Xanh dương
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/w/h/wh-ch720_black01_m_1__1.png">
                        Đen
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Kích thước</td><td>Dài 26 cm - Rộng 20.8 cm - Cao 5.5 cm</td></tr>
            <tr><td>Trọng lượng</td><td>192 g</td></tr>
            <tr>
                <td>Công nghệ âm thanh</td>
                <td>
                    Bộ xử lý tích hợp V1 • Codec SBC/AAC<br />
                    Chống ồn kỹ thuật số • ENC • Ambient Sound<br />
                    360 Reality Audio • DSEE • Adaptive Sound Control • Equalizer
                </td>
            </tr>
            <tr><td>Micro</td><td>Có</td></tr>
            <tr><td>Thời lượng Pin</td><td>Bật ANC: 35 giờ • Tắt ANC: 50 giờ</td></tr>
            <tr><td>Phương thức điều khiển</td><td>Nút bấm vật lý</td></tr>
            <tr><td>Hãng sản xuất</td><td>Sony</td></tr>
        </table>
    </div>

    <!-- Script JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
