@{
    ViewBag.Title = "SonyWFC710N";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="https://cdn2.cellphones.com.vn/358x/media/catalog/product/s/o/sony-wf-c710n-11.jpg"
                 alt="Tai nghe Sony WF-C710N"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Chống ồn hiệu quả với công nghệ Dual Noise Sensor và micro kép trên mỗi bên tai nghe.</li>
                    <li>Tăng cường chất lượng âm thanh nén nhờ công nghệ DSEE độc quyền từ Sony.</li>
                    <li>Hỗ trợ đàm thoại rõ ràng với AI, cùng nhiều tiện ích như Bluetooth Multipoint và 360 Reality Audio.</li>
                    <li>Thời lượng pin ấn tượng đến 30 giờ khi dùng kèm hộp sạc, hỗ trợ sạc nhanh qua USB-C.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Tai nghe Bluetooth True Wireless Sony WF-C710N</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">2.245.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">C710N</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/s/o/sony-wf-c710n-11.jpg">
                        Xanh
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/s/o/sony-wf-c710n-10.jpg">
                        Hồng
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/t/a/tai-nghe-khong-day-sony-wf-c710n_1.png">
                        Trắng
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Kích thước</td><td>Dài 20 cm - Rộng 7.83 cm - Cao 25.69 cm</td></tr>
            <tr><td>Trọng lượng</td><td>5.2 g</td></tr>
            <tr>
                <td>Công nghệ âm thanh</td>
                <td>
                    360 Reality Audio • DSEE (Digital Sound Enhancement Engine)<br />
                    360 Spatial Sound Personalizer
                </td>
            </tr>
            <tr><td>Micro</td><td>Micro kép</td></tr>
            <tr><td>Thời lượng Pin</td><td>Tai nghe: 8 giờ • Hộp sạc: 21.5 giờ</td></tr>
            <tr><td>Phương thức điều khiển</td><td>Cảm ứng</td></tr>
            <tr><td>Hãng sản xuất</td><td>Sony</td></tr>
        </table>
    </div>

    <!-- Script JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
