@{
    ViewBag.Title = "SamsungBuds2Pro";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/AmThanh/ss5.png"
                 alt="Tai nghe Samsung Galaxy Buds2 Pro"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Thiết kế công thái học, ôm khít tai, hạn chế rơi khi di chuyển.</li>
                    <li>Chống ồn ANC + 360 Audio mang đến trải nghiệm âm thanh đắm chìm.</li>
                    <li>Kháng nước IPX7, thoải mái khi tập luyện hoặc đi mưa.</li>
                    <li>Kết nối Bluetooth 5.3 nhanh và ổn định.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Tai nghe Bluetooth True Wireless Samsung Galaxy Buds2 Pro</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">2.390.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">Galaxy Buds2 Pro</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/b/u/bud2-t_m.jpg">
                        Tím
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/b/u/busd2-den.jpg">
                        Đen
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr>
                <td>Kích thước</td>
                <td>
                    Tai nghe: 21.6 x 19.9 x 18.7 mm<br />
                    Hộp sạc: 50.2 x 50.1 x 27.7 mm
                </td>
            </tr>
            <tr>
                <td>Trọng lượng</td>
                <td>
                    Tai nghe: 5.5 g<br />
                    Hộp sạc: 43.4 g
                </td>
            </tr>
            <tr>
                <td>Công nghệ âm thanh</td>
                <td>
                    Active Noise Cancelling<br />
                    360 Reality Audio<br />
                    Ambient Sound<br />
                    Âm thanh Hi-Fi
                </td>
            </tr>
            <tr><td>Micro</td><td>6 micro</td></tr>
            <tr>
                <td>Thời lượng Pin</td>
                <td>
                    Tai nghe: ~5 giờ<br />
                    Hộp sạc: ~18 giờ (Tắt ANC)
                </td>
            </tr>
            <tr><td>Phương thức điều khiển</td><td>Cảm ứng chạm</td></tr>
            <tr><td>Hãng sản xuất</td><td>Samsung</td></tr>
        </table>
    </div>

    <!-- Script JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
