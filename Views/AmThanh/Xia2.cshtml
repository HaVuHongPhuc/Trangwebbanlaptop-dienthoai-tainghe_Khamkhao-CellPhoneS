@{
    ViewBag.Title = "XiaomiRedmiBuds6";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/AmThanh/xia2.png"
                 alt="Tai nghe Xiaomi Redmi Buds 6"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Dải tần rộng, hỗ trợ 4 EQ cho nhiều nhu cầu nghe khác nhau.</li>
                    <li>Chống ồn chủ động lên đến 49dB, 3 chế độ chống ồn tùy chỉnh.</li>
                    <li>Pin trâu đến 42 giờ, sạc nhanh 10 phút dùng ngay 4 giờ.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Tai nghe không dây Xiaomi Redmi Buds 6</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">890.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option">Buds 6 Active</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/t/a/tai-nghe-khong-day-xiaomi-redmi_1_.png">
                        Xanh lá
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/t/a/tai-nghe-khong-day-xiaomi-redmi-buds-6_4__1.png">
                        Đen
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/t/a/tai-nghe-khong-day-xiaomi-redmi-buds-6_13__1.png">
                        Trắng
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr>
                <td>Kích thước</td>
                <td>
                    Tai nghe: 31.13 x 21.34 x 23.5 mm<br />
                    Hộp sạc: 61.01 x 51.71 x 24.80 mm
                </td>
            </tr>
            <tr><td>Micro</td><td>2 micro chống ồn, chống gió tới 9m/s</td></tr>
            <tr>
                <td>Thời lượng Pin</td>
                <td>
                    Tai nghe: 10 giờ (tắt ANC)<br />
                    Hộp sạc: 42 giờ (tắt ANC)
                </td>
            </tr>
            <tr><td>Hãng sản xuất</td><td>Xiaomi</td></tr>
        </table>
    </div>

    <!-- Script JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
