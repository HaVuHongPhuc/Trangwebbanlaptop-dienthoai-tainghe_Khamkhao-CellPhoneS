@{
    ViewBag.Title = "XiaomiRedmiBuds5Pro";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS chung -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="https://cdn2.cellphones.com.vn/358x/media/catalog/product/f/r/frame_98_5.png"
                 alt="Tai nghe Xiaomi Redmi Buds 5 Pro"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Thời lượng pin lên đến 38 giờ, thoải mái trải nghiệm không gián đoạn</li>
                    <li>Chất âm Hi-Fi tinh chỉnh bởi Xiaomi, mang đến âm thanh sống động</li>
                    <li>Đàm thoại rõ ràng nhờ 3 micro AI thông minh, hạn chế tiếng ồn</li>
                    <li>Kháng nước và bụi chuẩn IP54, phù hợp cho tập luyện & di chuyển</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Tai nghe Bluetooth True Wireless Xiaomi Redmi Buds 5 Pro</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">1.490.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">Buds 5 Pro</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/t/a/tai-nghe-khong-day-xiaomi-redmi-buds-5-pro-trang.png">
                        Trắng
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/t/a/tai-nghe-khong-day-xiaomi-redmi-buds-5-pro-den.png">
                        Đen
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/f/r/frame_98_5.png">
                        Tím
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr>
                <td>Kích thước</td>
                <td>
                    Tai nghe: 6.5 × 6.5 × 29.7 mm<br />
                    Hộp sạc: 61 × 46.8 × 25 mm
                </td>
            </tr>
            <tr>
                <td>Trọng lượng</td>
                <td>
                    Tai nghe: 5.1 g (mỗi bên)<br />
                    Hộp sạc: 32.6 g
                </td>
            </tr>
            <tr>
                <td>Công nghệ âm thanh</td>
                <td>Hi-Res</td>
            </tr>
            <tr><td>Micro</td><td>3 micro AI</td></tr>
            <tr>
                <td>Thời lượng Pin</td>
                <td>
                    Tai nghe: 10 giờ<br />
                    Hộp sạc: 38 giờ (tắt ANC)
                </td>
            </tr>
            <tr>
                <td>Phương thức điều khiển</td>
                <td>Cảm ứng chạm</td>
            </tr>
            <tr><td>Hãng sản xuất</td><td>Xiaomi</td></tr>
        </table>
    </div>

    <!-- JS xử lý -->
    <script src="~/Content/sanpham.js"></script>
</main>
