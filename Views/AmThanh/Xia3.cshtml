@{
    ViewBag.Title = "XiaomiRedmiBuds6Pro";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/AmThanh/xia3.png"
                 alt="Tai nghe Xiaomi Redmi Buds 6 Pro"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Chống ồn chủ động 55dB, hiệu quả cao hơn 14,16% so với thế hệ trước.</li>
                    <li>Cảm biến chuyển động xác định và theo dõi vị trí đầu, tạo âm thanh 3D sống động.</li>
                    <li>Âm thanh đạt chuẩn Hi-Res Audio, hỗ trợ codec LDAC mang lại chất lượng vượt trội.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Tai nghe không dây Xiaomi Redmi Buds 6 Pro</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">1.720.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">Redmi Buds 6 Pro</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/t/a/tai-nghe-khong-day-xiaomi-redmi-buds-6-pro_17__1.png">
                        Đen
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/t/a/tai-nghe-khong-day-xiaomi-redmi-buds-6-pro_5__1.png">
                        Trắng
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/t/a/tai-nghe-khong-day-xiaomi-redmi_1.png">
                        Tím
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr>
                <td>Kích thước</td>
                <td>
                    Tai nghe: 30.6 x 21.4 x 24.5 mm<br />
                    Hộp sạc: 61.05 x 48.28 x 25.17 mm
                </td>
            </tr>
            <tr>
                <td>Trọng lượng</td>
                <td>
                    Tai nghe: ~5.2 g<br />
                    Tổng: ~46.5 g
                </td>
            </tr>
            <tr>
                <td>Micro</td>
                <td>3 micro AI, chống gió 12m/s, hỗ trợ gọi điện rõ ràng</td>
            </tr>
            <tr>
                <td>Thời lượng Pin</td>
                <td>
                    Tai nghe: 9 giờ (tắt ANC)<br />
                    Hộp sạc: 36 giờ (tắt ANC)
                </td>
            </tr>
            <tr><td>Hãng sản xuất</td><td>Xiaomi</td></tr>
        </table>
    </div>

    <!-- JS xử lý -->
    <script src="~/Content/sanpham.js"></script>
</main>
