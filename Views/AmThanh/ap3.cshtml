@{
    ViewBag.Title = "AirPodsPro2022";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/AmThanh/ap3.png"
                 alt="Tai nghe AirPods Pro 2022"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Chủ Động Khử Tiếng Ồn gấp đôi, chế độ Xuyên Âm cho phép nghe rõ môi trường xung quanh.</li>
                    <li>Chip H2 cho âm thanh sống động: âm cao sắc nét, âm trầm đầy đặn, cải thiện chất lượng cuộc gọi.</li>
                    <li>4 cặp đầu silicon tùy chỉnh, chống bụi, mồ hôi, nước đạt chuẩn IP54 – phù hợp cho mọi hoạt động.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Tai nghe Bluetooth Apple AirPods Pro 2022 | Chính hãng Apple Việt Nam</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">5.690.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">AirPods Pro 2022</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/insecure/rs:fill:0:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/1/_/1_264.jpg">
                        Trắng
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr>
                <td>Công nghệ âm thanh</td>
                <td>
                    Active Noise Cancellation • Chip Apple H2 • Adaptive EQ
                </td>
            </tr>
            <tr><td>Micro</td><td>Có</td></tr>
            <tr>
                <td>Thời lượng Pin</td>
                <td>
                    Nghe nhạc: 5 giờ <br />
                    Đàm thoại: 4,5 giờ
                </td>
            </tr>
            <tr><td>Phương thức điều khiển</td><td>Cảm biến chạm</td></tr>
            <tr><td>Hãng sản xuất</td><td>Apple Chính hãng</td></tr>
        </table>
    </div>

    <!-- Script JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
