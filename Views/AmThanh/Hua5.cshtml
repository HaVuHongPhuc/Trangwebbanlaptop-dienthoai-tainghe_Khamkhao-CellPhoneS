@{
    ViewBag.Title = "HuaweiFreebuds5";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/AmThanh/hua5.png"
                 alt="Tai nghe Huawei Freebuds 5"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Tai nghe trang bị chất âm sống động đỉnh cao Punchy Bass.</li>
                    <li>Tiên phong trong thiết kế với đường cong đầy tính thẩm mỹ.</li>
                    <li>Chi tiết trong từng âm sắc, đạt chứng nhận Hi-Res và HWA.</li>
                    <li>Công nghệ ANC 3.0 giảm tiếng ồn môi trường xung quanh.</li>
                    <li>Thời lượng pin đến 30 giờ gồm hộp sạc, nghe nhạc cả ngày.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Tai nghe Bluetooth True Wireless Huawei Freebuds 5</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">1.950.000₫</p>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/t/a/tai-nghe-khong-day-huawei-freebu_1_.png">
                        Bạc
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/t/a/tai-nghe-khong-day-huawei-freebu.png">
                        Trắng
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr>
                <td>Công nghệ âm thanh</td>
                <td>EQ / ANC / Chống tiếng ồn cuộc gọi chủ động</td>
            </tr>
            <tr><td>Micro</td><td>Có</td></tr>
            <tr>
                <td>Thời lượng sử dụng Pin</td>
                <td>
                    Tai nghe: 5 giờ<br />
                    Hộp sạc: 30 giờ
                </td>
            </tr>
            <tr>
                <td>Phương thức điều khiển</td>
                <td>Cảm ứng chạm</td>
            </tr>
            <tr><td>Hãng sản xuất</td><td>Huawei</td></tr>
        </table>
    </div>

    <!-- Script JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
