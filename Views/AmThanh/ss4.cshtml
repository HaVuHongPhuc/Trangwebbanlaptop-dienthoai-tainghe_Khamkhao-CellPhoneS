@{
    ViewBag.Title = "SamsungBuds3";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/AmThanh/ss4.png"
                 alt="Tai nghe Samsung Galaxy Buds 3"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Chống ồn chủ động ANC cho bạn thoải mái đắm chìm trong âm nhạc.</li>
                    <li>Âm thanh Hi-Fi 24 bit sống động, chi tiết.</li>
                    <li>Pin dài tới 30 giờ (khi tắt ANC), sẵn sàng đồng hành cả ngày dài.</li>
                    <li>Công nghệ Bluetooth 5.4, kết nối nhanh và ổn định.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Tai nghe Bluetooth True Wireless Samsung Galaxy Buds 3</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">3.250.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">Buds 3</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/s/a/samsung-galaxy-buds-3-12.png">
                        Trắng
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/s/a/samsung-galaxy-buds-3-6_1.png">
                        Xám
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr>
                <td>Kích thước</td>
                <td>
                    Tai nghe: 18.1 x 20.4 x 31.9 mm<br />
                    Hộp sạc: 58.9 x 48.7 x 24.4 mm
                </td>
            </tr>
            <tr>
                <td>Trọng lượng</td>
                <td>
                    Tai nghe: 4.7 g<br />
                    Hộp sạc: 46.5 g
                </td>
            </tr>
            <tr>
                <td>Công nghệ âm thanh</td>
                <td>
                    Chống ồn chủ động ANC<br />
                    Âm thanh Hi-Fi 24 bit<br />
                    Âm thanh vòm 360
                </td>
            </tr>
            <tr><td>Micro</td><td>6 micro</td></tr>
            <tr>
                <td>Thời lượng Pin</td>
                <td>
                    Tai nghe: 6h (Tắt ANC) / 5h (Bật ANC)<br />
                    Hộp sạc: 30h (Tắt ANC) / 24h (Bật ANC)
                </td>
            </tr>
            <tr>
                <td>Phương thức điều khiển</td>
                <td>
                    Cảm ứng chạm • Nhấn thanh bar
                </td>
            </tr>
            <tr><td>Hãng sản xuất</td><td>Samsung</td></tr>
        </table>
    </div>

    <!-- Script JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
