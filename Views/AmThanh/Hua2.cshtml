@{
    ViewBag.Title = "HuaweiFreebuds6i";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/AmThanh/hua2.png"
                 alt="Tai nghe Huawei Freebuds 6i"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Chống ồn chủ động ANC giúp loại bỏ tiếng ồn hiệu quả, cho trải nghiệm âm thanh tốt.</li>
                    <li>Kháng nước IP54 hiệu quả, sử dụng an toàn trong nhiều điều kiện thời tiết.</li>
                    <li>Màng loa 11mm mang đến âm thanh chi tiết, sống động.</li>
                    <li>Thời lượng pin lên đến 35 giờ cho trải nghiệm nghe nhạc cả ngày.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Tai nghe Bluetooth True Wireless Huawei Freebuds 6i</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">1.390.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">Freebuds 6i</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/p/h/photo_2024-07-22_17-20-55.jpg">
                        Tím
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/h/u/huawei-6i.jpg">
                        Đen
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/h/u/huawei-6i-trang.jpg">
                        Trắng
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr>
                <td>Kích thước</td>
                <td>Tai nghe: 31.4 x 21.3 x 23.7 mm • Hộp sạc: 48.2 x 61.8 x 27 mm</td>
            </tr>
            <tr>
                <td>Trọng lượng</td>
                <td>Tai nghe: 5,4 ± 0,3 g • Hộp sạc: 34 ± 1 g</td>
            </tr>
            <tr>
                <td>Công nghệ âm thanh</td>
                <td>Chống ồn chủ động ANC</td>
            </tr>
            <tr><td>Micro</td><td>Có</td></tr>
            <tr>
                <td>Thời lượng Pin</td>
                <td>Tai nghe: 8 giờ • Hộp sạc: 35 giờ (Tắt ANC)</td>
            </tr>
            <tr>
                <td>Phương thức điều khiển</td>
                <td>Cảm ứng chạm</td>
            </tr>
            <tr><td>Hãng sản xuất</td><td>Huawei</td></tr>
        </table>
    </div>

    <!-- Script JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
