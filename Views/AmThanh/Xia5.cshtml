@{
    ViewBag.Title = "XiaomiBuds5Pro";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/AmThanh/xia5.png"
                 alt="Tai nghe Xiaomi Buds 5 Pro"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Chứng nhận Hi-Fi kép và Qualcomm® aptX™ Lossless cho chất âm vượt trội</li>
                    <li>Chống ồn chủ động 55dB với nhiều cấp độ điều chỉnh linh hoạt</li>
                    <li>Tích hợp AI: ghi âm, phiên âm và dịch thuật nhanh bằng cử chỉ</li>
                    <li>Pin 40h, hỗ trợ sạc nhanh & sạc không dây</li>
                    <li>Bluetooth 5.4, kết nối ổn định phạm vi 10m</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Tai nghe không dây Xiaomi Buds 5 Pro</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">4.990.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">Pro</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/1/2/12_47_5.png">
                        Trắng
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/x/i/xiaomi-buds-5-pro.png">
                        Xám
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr>
                <td>Kích thước</td>
                <td>
                    Tai nghe: 25.78 × 31.39 × 21.24 mm<br />
                    Hộp sạc: 60.5 × 48.45 × 26.79 mm
                </td>
            </tr>
            <tr>
                <td>Trọng lượng</td>
                <td>
                    Tai nghe: 5.6g (±0.1g)<br />
                    Hộp sạc: 41.8g (±0.5g)
                </td>
            </tr>
            <tr>
                <td>Công nghệ âm thanh</td>
                <td>
                    Hi-Res Audio<br />
                    Qualcomm® aptX™ Lossless<br />
                    Harman AudioEFX
                </td>
            </tr>
            <tr><td>Micro</td><td>3 micro</td></tr>
            <tr>
                <td>Thời lượng Pin</td>
                <td>
                    Tai nghe: 8 giờ<br />
                    Hộp sạc: 40 giờ
                </td>
            </tr>
            <tr>
                <td>Phương thức điều khiển</td>
                <td>Cảm ứng chạm</td>
            </tr>
            <tr><td>Hãng sản xuất</td><td>Xiaomi</td></tr>
        </table>
    </div>

    <!-- JS xử lý -->
    <script src="~/Content/sanpham.js"></script>
</main>
