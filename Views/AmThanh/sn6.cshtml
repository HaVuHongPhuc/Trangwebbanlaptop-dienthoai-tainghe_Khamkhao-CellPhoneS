@{
    ViewBag.Title = "SonyLinkbudsFit";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/AmThanh/sony1.png"
                 alt="Tai nghe Sony Linkbuds Fit (WF-LS910N)"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>LinkBuds Fit với công nghệ cảm biến tiếng ồn kép cùng nhiều micro, mang đến trải nghiệm đắm chìm hơn.</li>
                    <li>Thiết kế nhỏ gọn, thông minh và vừa vặn, thoải mái khi tập luyện nhờ móc và đệm tai mới.</li>
                    <li>Kháng nước chuẩn IPX44, chịu được nước bắn và mồ hôi – nghe nhạc vô tư mà không lo gián đoạn.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Tai nghe không dây Sony Linkbuds Fit (WF-LS910N)</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">3.945.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">Linkbuds Open</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/t/a/tai-nghe-khong-day-sony-linkbuds-fit_10__1.jpg">
                        Xanh ngọc
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/t/a/tai-nghe-khong-day-sony-linkbuds-fit_11__1.jpg">
                        Đen
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/t/a/tai-nghe-khong-day-sony-linkbuds-fit_9__1.jpg">
                        Trắng
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/s/n/sn1.png">
                        Hồng
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr>
                <td>Kích thước</td>
                <td>47.2 x 47.2 x 32.6 mm</td>
            </tr>
            <tr>
                <td>Trọng lượng</td>
                <td>Xấp xỉ 4.9 g (x2 tai, bao gồm đệm tai)</td>
            </tr>
            <tr><td>Micro</td><td>Có</td></tr>
            <tr>
                <td>Thời lượng Pin</td>
                <td>
                    Nghe nhạc: 5h (bật ANC) • 8h (tắt ANC)<br />
                    Đàm thoại: tối đa 4h<br />
                    Chờ: 6.5h (bật ANC) • 14h (tắt ANC)
                </td>
            </tr>
            <tr><td>Hãng sản xuất</td><td>Sony</td></tr>
        </table>
    </div>

    <!-- Script JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
