@{
    ViewBag.Title = "MacBookPro14M4";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Thông tin sản phẩm -->
    <div class="product-detail">
        <!-- Hình ảnh + mô tả nổi bật -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="https://macone.vn/wp-content/uploads/2024/10/mbp14-spaceblack-gallery1-202410-1024x787.jpeg"
                 alt="MacBook Pro 14 M4 10CPU 10GPU 16GB 512GB"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Màn hình Liquid Retina XDR 14,2 inch, độ sáng tối đa 1600 nit, hình ảnh sắc nét và sống động.</li>
                    <li>Tích hợp FileVault và các tính năng bảo mật cao cấp, bảo vệ dữ liệu cá nhân khỏi các mối đe dọa.</li>
                    <li>Camera 12MP Center Stage, ba micrô studio và sáu loa Dolby Atmos mang lại trải nghiệm giải trí tuyệt vời.</li>
                </ul>
            </div>
        </div>

        <!-- Giá + tùy chọn -->
        <div class="product-right">
            <h2>MacBook Pro 14 M4 10CPU 10GPU 16GB 512GB | Chính hãng Apple Việt Nam</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">37.690.000đ</p>

            <!-- Chọn phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">10CPU - 10GPU - 16GB - 512GB</button>
                </div>
            </div>

            <!-- Chọn màu -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://macone.vn/wp-content/uploads/2024/10/mbp14-spaceblack-gallery1-202410-1024x787.jpeg">
                        Đen
                    </button>
                    <button class="option color-option"
                            data-img="https://cellphones.com.vn/media/wysiwyg/laptop/macbook/macbook-pro/M4/macbook-pro-m4-14-inch-10cpu-10gpu-24gb-512gb-1.jpg">
                        Bạc
                    </button>
                </div>
            </div>

            <!-- Cụm nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Loại Card đồ họa</td><td>GPU 10 lõi • Neural Engine 16 lõi</td></tr>
            <tr><td>Dung lượng RAM</td><td>16GB</td></tr>
            <tr><td>Ổ cứng</td><td>512GB SSD</td></tr>
            <tr><td>Kích thước màn hình</td><td>14.2 inches</td></tr>
            <tr>
                <td>Công nghệ màn hình</td>
                <td>
                    Liquid Retina XDR • Extreme Dynamic Range<br />
                    Độ sáng toàn màn hình: 1.000 nit • Độ sáng đỉnh 1.600 nit (HDR)<br />
                    1 tỷ màu • Dải màu rộng (P3) • True Tone<br />
                    Hỗ trợ tối đa 2 màn hình ngoài
                </td>
            </tr>
            <tr><td>Pin</td><td>72.4 Wh</td></tr>
            <tr><td>Hệ điều hành</td><td>macOS</td></tr>
            <tr><td>Độ phân giải màn hình</td><td>3024 x 1964 pixels</td></tr>
        </table>
    </div>

    <script src="~/Content/sanpham.js"></script>
</main>
