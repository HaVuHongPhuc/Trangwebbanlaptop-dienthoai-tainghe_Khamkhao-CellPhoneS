@{
    ViewBag.Title = "MacMiniM4";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Thông tin sản phẩm -->
    <div class="product-detail">
        <!-- Hình ảnh + mô tả nổi bật -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/macbook_8.png"
                 alt="Mac mini M4 2024 10CPU 10GPU 16GB 256GB"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Tính năng bảo mật mạnh mẽ giúp ngăn chặn virus và phần mềm độc hại, bảo vệ dữ liệu cá nhân.</li>
                    <li>Kết nối tiện lợi với cổng USB-C và jack tai nghe ngay mặt trước.</li>
                    <li>Chip M4 hiệu năng cao, xử lý mượt mà ứng dụng Zoom, Photoshop và nhiều phần mềm chuyên dụng.</li>
                </ul>
            </div>
        </div>

        <!-- Giá + tùy chọn -->
        <div class="product-right">
            <h2>Mac mini M4 2024 10CPU 10GPU 16GB 256GB | Chính hãng Apple VN</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">13.990.000đ</p>

            <!-- Chọn phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">10CPU - 10GPU - 16GB - 256GB</button>
                </div>
            </div>

            <!-- Chọn màu -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/v/n/vn_mac_studio_m2_pdp_image_position_5_2.jpg">
                        Bạc
                    </button>
                </div>
            </div>

            <!-- Cụm nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Loại Card đồ họa</td><td>GPU 10 lõi</td></tr>
            <tr><td>Dung lượng RAM</td><td>16GB</td></tr>
            <tr><td>Ổ cứng</td><td>256GB SSD</td></tr>
            <tr>
                <td>Công nghệ màn hình</td>
                <td>
                    Hỗ trợ tối đa 3 màn hình<br />
                    Đầu ra video kỹ thuật số Thunderbolt 4<br />
                    Đầu ra video qua cổng HDMI
                </td>
            </tr>
            <tr><td>Hệ điều hành</td><td>macOS</td></tr>
            <tr>
                <td>Cổng giao tiếp</td>
                <td>
                    <strong>Mặt trước:</strong> 2 cổng USB-C (USB 3, 10Gb/s), Jack tai nghe 3.5mm<br />
                    <strong>Mặt sau:</strong> 1 cổng Gigabit Ethernet (tùy chọn 10Gb), 1 cổng HDMI, Thunderbolt 4, USB 4
                </td>
            </tr>
        </table>
    </div>

    <script src="~/Content/sanpham.js"></script>
</main>
