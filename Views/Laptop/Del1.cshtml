@{
    ViewBag.Title = "Dell_Inspiron_3520";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Thông tin sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/Dell1.png"
                 alt="Laptop Dell Inspiron 15 3520 I3520-7896BLK-PUS"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Trang bị chip Intel Core i7-1255U, hiệu suất cao cho công việc và giải trí.</li>
                    <li>RAM 16GB, hỗ trợ đa nhiệm mượt mà, xử lý các tác vụ nặng hiệu quả.</li>
                    <li>Ổ cứng 1TB PCIe SSD, lưu trữ thoải mái tài liệu, hình ảnh và video.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Laptop Dell Inspiron 15 3520 I3520-7896BLK-PUS | Nhập khẩu chính hãng</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">18.490.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">i7-1255U • 16GB • 1TB SSD</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/insecure/rs:fill:0:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/t/e/text_ng_n_40__6_16.png">
                        Đen
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Loại Card đồ họa</td><td>Intel Iris Xe Graphics</td></tr>
            <tr><td>Dung lượng RAM</td><td>16GB</td></tr>
            <tr><td>Ổ cứng</td><td>1TB SSD</td></tr>
            <tr><td>Kích thước màn hình</td><td>15.6 inches</td></tr>
            <tr>
                <td>Công nghệ màn hình</td>
                <td>
                    LED Backlight • Màn hình chống chói<br />
                    Độ sáng 250 cd/m² • 141 ppi<br />
                    Không gian màu NTSC • Narrow Border
                </td>
            </tr>
            <tr><td>Pin</td><td>41 Wh, 3-cell</td></tr>
            <tr><td>Hệ điều hành</td><td>Windows 11 Home</td></tr>
            <tr><td>Độ phân giải màn hình</td><td>1920 x 1080 pixels (Full HD)</td></tr>
        </table>
    </div>

    <!-- JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
