@{
    ViewBag.Title = "Dell_G15_5530";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/Dell4.png"
                 alt="Laptop Dell G15 5530"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Vi xử lý Intel Core i7-13650HX mạnh mẽ, tối ưu cho công việc và gaming.</li>
                    <li>RAM 16GB giúp đa nhiệm mượt mà, xử lý tác vụ nặng dễ dàng.</li>
                    <li>Ổ cứng SSD 1TB PCIe tốc độ cao, thoải mái lưu trữ tài liệu, hình ảnh, video.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Laptop Dell G15 5530</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">36.990.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">i7-13650HX • 16GB • 1TB SSD • RTX 4060</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/insecure/rs:fill:0:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/t/e/text_ng_n_2__8_5.png">
                        Đen
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Loại Card đồ họa</td><td>NVIDIA GeForce RTX 4060 • 8GB GDDR6</td></tr>
            <tr><td>Dung lượng RAM</td><td>16GB</td></tr>
            <tr><td>Ổ cứng</td><td>1TB M.2 PCIe NVMe SSD</td></tr>
            <tr><td>Kích thước màn hình</td><td>15.6 inches</td></tr>
            <tr>
                <td>Cổng giao tiếp</td>
                <td>
                    1× RJ-45<br />
                    3× USB 3.2 Gen 1<br />
                    1× USB 3.2 Gen 2 Type-C (DisplayPort)<br />
                    1× Jack tai nghe đa năng<br />
                    1× HDMI 2.1
                </td>
            </tr>
            <tr><td>Pin</td><td>41Wh • 3-cell</td></tr>
            <tr><td>Hệ điều hành</td><td>Windows 11 Home + Office Home & Student 2021</td></tr>
            <tr><td>Độ phân giải màn hình</td><td>1920 × 1080 pixels (Full HD)</td></tr>
        </table>
    </div>

    <!-- JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
