@{
    ViewBag.Title = "AsusVivobookS16OLED";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Thông tin sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/Asus6.png"
                 alt="Laptop ASUS Vivobook S16 OLED M5606KA-RI016WS"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Trang bị bộ xử lý Ryzen AI 7 350, hiệu năng mạnh mẽ cho học tập, làm việc và giải trí.</li>
                    <li>RAM 24GB và SSD 512GB PCIe 4.0 tốc độ cao, cho khả năng đa nhiệm mượt mà.</li>
                    <li>Màn hình 16" OLED 3K HDR với độ sáng 600 nits, hình ảnh cực sắc nét và chân thực.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Laptop ASUS Vivobook S16 OLED M5606KA-RI016WS</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">26.990.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">Ryzen AI 7 350 • 24GB • 512GB SSD</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/insecure/rs:fill:0:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/t/e/text_ng_n_1__9_7.png">
                        Đen
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Loại Card đồ họa</td><td>AMD Radeon Graphics</td></tr>
            <tr><td>Dung lượng RAM</td><td>24GB</td></tr>
            <tr><td>Ổ cứng</td><td>512GB M.2 NVMe PCIe 4.0 SSD</td></tr>
            <tr><td>Kích thước màn hình</td><td>16 inches</td></tr>
            <tr>
                <td>Công nghệ màn hình</td>
                <td>
                    Độ sáng 400 nits • HDR 600 nits<br />
                    Độ phủ màu 100% DCI-P3 • Gamut Mapping<br />
                    Display HDR True Black 500 • 1.07 tỷ màu<br />
                    Giảm 70% ánh sáng xanh • TÜV Rheinland-certified
                </td>
            </tr>
            <tr><td>Pin</td><td>75 Wh, 4-cell Li-ion</td></tr>
            <tr><td>Hệ điều hành</td><td>Windows 11 Home + Microsoft Office Home 2024 + Microsoft 365 Basic</td></tr>
            <tr><td>Độ phân giải màn hình</td><td>2880 x 1800 pixels (3K OLED)</td></tr>
        </table>
    </div>

    <!-- JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
