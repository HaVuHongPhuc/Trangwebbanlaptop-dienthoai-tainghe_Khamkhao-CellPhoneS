@{
    ViewBag.Title = "Lenovo_IdeaPad_Slim3_15ABR8";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS sản phẩm mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/lnv2.png"
                 alt="Laptop Lenovo IdeaPad Slim 3 15ABR8"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Trang bị bộ vi xử lý AMD Ryzen 5 5625U, hiệu suất ổn định cho học tập và công việc.</li>
                    <li>RAM 16GB hỗ trợ đa nhiệm mượt mà, tối ưu trải nghiệm xử lý.</li>
                    <li>Ổ cứng SSD 512GB PCIe tốc độ cao, đảm bảo không gian lưu trữ rộng rãi.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Laptop Lenovo IdeaPad Slim 3 15ABR8 82XM00MDVN</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">12.490.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">Ryzen 5-5625U • 16GB • 512GB SSD</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/insecure/rs:fill:0:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/t/e/text_ng_n_6__2_225.png">
                        Xám
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Loại Card đồ họa</td><td>AMD Radeon Graphics</td></tr>
            <tr><td>Dung lượng RAM</td><td>16GB</td></tr>
            <tr><td>Ổ cứng</td><td>512GB SSD</td></tr>
            <tr><td>Kích thước màn hình</td><td>15.6 inches</td></tr>
            <tr>
                <td>Công nghệ màn hình</td>
                <td>Độ sáng 300 nits • Màn hình chống chói</td>
            </tr>
            <tr><td>Pin</td><td>47Wh</td></tr>
            <tr><td>Hệ điều hành</td><td>Windows 11 Home Single Language (English)</td></tr>
            <tr><td>Độ phân giải màn hình</td><td>1920 × 1080 pixels (FullHD)</td></tr>
        </table>
    </div>

    <!-- JS đổi màu ảnh -->
    <script src="~/Content/sanpham.js"></script>
</main>
