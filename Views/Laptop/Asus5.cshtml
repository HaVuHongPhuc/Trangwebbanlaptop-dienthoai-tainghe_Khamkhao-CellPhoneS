@{
    ViewBag.Title = "AsusVivobook15BQ2076W";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Thông tin sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/Asus5.png"
                 alt="Laptop ASUS Vivobook 15 X1502VA-BQ2076W"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Sở hữu chip Intel Core i5-1334U, mang lại hiệu năng ổn định cho học tập và làm việc.</li>
                    <li>Trang bị RAM 16GB và SSD 512GB PCIe, tốc độ xử lý nhanh và lưu trữ thoải mái.</li>
                    <li>Thiết kế mỏng nhẹ, màu bạc tinh tế, phù hợp với phong cách hiện đại.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Laptop ASUS Vivobook 15 X1502VA-BQ2076W</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">13.990.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">i5-1334U • 16GB • 512GB SSD</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/insecure/rs:fill:0:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/t/e/text_ng_n_5__9_265.png">
                        Bạc
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Loại Card đồ họa</td><td>Intel Iris Xe Graphics</td></tr>
            <tr><td>Dung lượng RAM</td><td>16GB</td></tr>
            <tr><td>Ổ cứng</td><td>512GB M.2 NVMe PCIe 3.0 SSD</td></tr>
            <tr><td>Kích thước màn hình</td><td>15.6 inches</td></tr>
            <tr>
                <td>Công nghệ màn hình</td>
                <td>
                    Độ sáng 250 nits • Độ phủ màu 45% NTSC<br />
                    Màn hình chống chói • TÜV Rheinland-certified
                </td>
            </tr>
            <tr><td>Pin</td><td>42 Wh, 3-cell Li-ion</td></tr>
            <tr><td>Hệ điều hành</td><td>Windows 11 Home</td></tr>
            <tr><td>Độ phân giải màn hình</td><td>1920 x 1080 pixels (Full HD)</td></tr>
        </table>
    </div>

    <!-- JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
