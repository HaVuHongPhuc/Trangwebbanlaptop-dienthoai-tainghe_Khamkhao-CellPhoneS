@{
    ViewBag.Title = "Lenovo_LOQ_15IRX10";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS sản phẩm -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/lnv6.png"
                 alt="Laptop Lenovo LOQ 15IRX10"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Trang bị vi xử lý Intel Core i7-13650HX, mang lại hiệu suất cao cho công việc và giải trí.</li>
                    <li>RAM 16GB, hỗ trợ đa nhiệm mượt mà và xử lý tốt các tác vụ nặng.</li>
                    <li>Ổ cứng SSD 512GB PCIe tốc độ cao, lưu trữ thoải mái tài liệu, hình ảnh, video.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Laptop Lenovo LOQ 15IRX10 83JE00PEVN</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">32.990.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">i7-13650HX • 16GB • 512GB SSD</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/insecure/rs:fill:0:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/t/e/text_ng_n_4__8_132.png">
                        Xám
                    </button>
                </div>
            </div>

            <!-- Các nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Loại Card đồ họa</td><td>NVIDIA GeForce RTX 5050 8GB GDDR7 • Boost Clock 2370MHz • TGP 100W • 440 AI TOPS</td></tr>
            <tr><td>Dung lượng RAM</td><td>16GB</td></tr>
            <tr><td>Ổ cứng</td><td>512GB SSD</td></tr>
            <tr><td>Kích thước màn hình</td><td>15.6 inches</td></tr>
            <tr>
                <td>Công nghệ màn hình</td>
                <td>
                    Độ sáng 300nits • Màn hình chống chói • 100% sRGB • G-SYNC
                </td>
            </tr>
            <tr><td>Pin</td><td>60Wh</td></tr>
            <tr><td>Hệ điều hành</td><td>Windows 11 Home Single Language (English)</td></tr>
            <tr><td>Độ phân giải màn hình</td><td>1920 × 1080 pixels (WUXGA)</td></tr>
        </table>
    </div>

    <!-- JS đổi ảnh màu sắc -->
    <script src="~/Content/sanpham.js"></script>
</main>
