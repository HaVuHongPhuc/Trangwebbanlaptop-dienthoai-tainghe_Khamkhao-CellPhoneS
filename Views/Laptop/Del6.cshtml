@{
    ViewBag.Title = "Dell_15_DC15250_3G7T0";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS sản phẩm mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/Dell6.png"
                 alt="Laptop Dell 15 DC15250 3G7T0"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Trang bị vi xử lý Intel Core i7-1355U mạnh mẽ, đáp ứng nhu cầu học tập và làm việc.</li>
                    <li>RAM 16GB hỗ trợ đa nhiệm mượt mà, xử lý nhanh các tác vụ nặng.</li>
                    <li>Ổ cứng SSD 1TB PCIe tốc độ cao, thoải mái lưu trữ tài liệu, hình ảnh, video.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Laptop Dell 15 DC15250 3G7T0 | Nhập khẩu chính hãng</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">18.590.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">i7-1355U • 16GB • 1TB SSD</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/insecure/rs:fill:0:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/t/e/text_ng_n_2__10_102.png">
                        Bạc
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Loại Card đồ họa</td><td>Intel UHD Graphics</td></tr>
            <tr><td>Dung lượng RAM</td><td>16GB</td></tr>
            <tr><td>Ổ cứng</td><td>1TB M.2 PCIe NVMe Gen 4</td></tr>
            <tr><td>Kích thước màn hình</td><td>15.6 inches</td></tr>
            <tr>
                <td>Cổng giao tiếp</td>
                <td>
                    Khe đọc thẻ SD • USB 2.0 • USB 3.2 Gen 1 • USB-C<br />
                    Cổng HDMI 1.4 • Cổng âm thanh đa năng
                </td>
            </tr>
            <tr><td>Pin</td><td>41Wh • 3-cell</td></tr>
            <tr><td>Hệ điều hành</td><td>Windows 11 Home</td></tr>
            <tr><td>Độ phân giải màn hình</td><td>1920 × 1080 pixels (FullHD)</td></tr>
        </table>
    </div>

    <!-- JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
