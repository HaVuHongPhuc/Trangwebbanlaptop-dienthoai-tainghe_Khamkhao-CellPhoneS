@{
    ViewBag.Title = "MacBookAirM2";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- Sử dụng CSS mặc định như MacBook Pro -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Thông tin sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/image_mac1.png"
                 alt="MacBook Air M2 2024 8CPU 8GPU 16GB 256GB"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Chip Apple M2 mạnh mẽ, hiệu năng vượt trội cho học tập và làm việc.</li>
                    <li>Thiết kế siêu mỏng nhẹ chỉ 1,24kg, dễ dàng mang theo.</li>
                    <li>Màn hình Liquid Retina 13,6 inch với độ sáng 500 nit, hiển thị sắc nét.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>MacBook Air M2 256GB | Chính hãng Apple Việt Nam</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">19.890.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">8CPU - 8GPU - 16GB - 256GB</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option" data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/m/a/macbook_air_m2_3_1_1_6.png">Trắng Vàng</button>
                    <button class="option color-option" data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/m/a/macbook_air_m2_4_1_1_6.png">Xám</button>
                    <button class="option color-option" data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/m/a/macbook_air_m2_2_1_1_7.png">Bạc</button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Loại Card đồ họa</td><td>8 nhân GPU • 16 nhân Neural Engine</td></tr>
            <tr><td>Dung lượng RAM</td><td>16GB</td></tr>
            <tr><td>Ổ cứng</td><td>256GB SSD</td></tr>
            <tr><td>Kích thước màn hình</td><td>13,6 inches</td></tr>
            <tr>
                <td>Công nghệ màn hình</td>
                <td>
                    Liquid Retina Display • Độ sáng 500 nit<br />
                    Hỗ trợ 1 tỷ màu • True Tone • Dải màu P3
                </td>
            </tr>
            <tr><td>Pin</td><td>52,6 Wh • Dùng đến 18 giờ</td></tr>
            <tr><td>Hệ điều hành</td><td>macOS</td></tr>
            <tr><td>Độ phân giải màn hình</td><td>2560 x 1664 pixels</td></tr>
        </table>
    </div>

    <!-- Script JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
