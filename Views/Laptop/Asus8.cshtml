@{
    ViewBag.Title = "AsusTUF_F16";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Thông tin sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/Asus8.png"
                 alt="Laptop ASUS TUF Gaming F16 FX608JMR-RV048W"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Vi xử lý Intel Core i7-14650HX cho hiệu suất cực mạnh trong gaming và công việc nặng.</li>
                    <li>RAM 32GB và SSD 1TB PCIe 4.0, mang lại khả năng lưu trữ và đa nhiệm thoải mái.</li>
                    <li>Màn hình 16.0" WUXGA 144Hz, hình ảnh sắc nét và tần số quét cao mượt mà.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Laptop ASUS TUF Gaming F16 FX608JMR-RV048W</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">36.990.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">i7-14650HX • 32GB • 1TB SSD</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="<img src="https://cdn2.cellphones.com.vn/insecure/rs:fill:0:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/t/e/text_ng_n_15_21.png" alt="Laptop ASUS TUF Gaming F16 FX608JMR-RV048W - 3"/>">
                        Xám
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr>
                <td>Loại Card đồ họa</td>
                <td>
                    NVIDIA GeForce RTX 5060 8GB GDDR7 115W (100W+15W)<br />
                    Intel UHD Graphics
                </td>
            </tr>
            <tr><td>Dung lượng RAM</td><td>32GB</td></tr>
            <tr><td>Ổ cứng</td><td>1TB M.2 NVMe PCIe 4.0 SSD</td></tr>
            <tr><td>Kích thước màn hình</td><td>16 inches</td></tr>
            <tr>
                <td>Công nghệ màn hình</td>
                <td>
                    Độ sáng 300 nits • Độ phủ màu NTSC 72% • sRGB 100% • AdobeRGB 75.35%<br />
                    Màn hình chống chói • G-Sync
                </td>
            </tr>
            <tr><td>Pin</td><td>90 Wh, 4-cell Li-ion</td></tr>
            <tr><td>Hệ điều hành</td><td>Windows 11 Home</td></tr>
            <tr><td>Độ phân giải màn hình</td><td>1920 x 1200 pixels</td></tr>
        </table>
    </div>

    <!-- JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
