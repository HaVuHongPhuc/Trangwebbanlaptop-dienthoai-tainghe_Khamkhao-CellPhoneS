@{
    ViewBag.Title = "MacM4Promn";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Thông tin sản phẩm -->
    <div class="product-detail">
        <!-- Hình ảnh + mô tả nổi bật -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/macbook_7.png"
                 alt="Apple Mac mini M4 Pro 2024 12CPU 16GPU 24GB 512GB"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Thiết kế nhỏ gọn, dễ dàng đặt gọn dưới mọi màn hình.</li>
                    <li>Đa dạng cổng kết nối: Thunderbolt, HDMI, Ethernet, USB-C, jack tai nghe.</li>
                    <li>Hiệu suất mạnh mẽ từ chip M4 Pro, xử lý nhanh dự án phức tạp.</li>
                </ul>
            </div>
        </div>

        <!-- Giá + tùy chọn -->
        <div class="product-right">
            <h2>Mac mini M4 Pro 2024 12CPU 16GPU 24GB 512GB | Chính hãng Apple VN</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">33.390.000đ</p>

            <!-- Chọn phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">12CPU - 16GPU - 24GB - 512GB</button>
                </div>
            </div>

            <!-- Chọn màu -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/insecure/rs:fill:0:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/m/a/macbook_3__7.png">
                        Bạc
                    </button>
                </div>
            </div>

            <!-- Cụm nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Loại Card đồ họa</td><td>GPU 16 lõi</td></tr>
            <tr><td>Dung lượng RAM</td><td>24GB</td></tr>
            <tr><td>Ổ cứng</td><td>512GB SSD</td></tr>
            <tr>
                <td>Công nghệ màn hình</td>
                <td>
                    Hỗ trợ đồng thời đến 3 màn hình<br />
                    Đầu ra video Thunderbolt 5<br />
                    Đầu ra HDMI
                </td>
            </tr>
            <tr><td>Hệ điều hành</td><td>macOS</td></tr>
            <tr>
                <td>Cổng giao tiếp</td>
                <td>
                    <b>Mặt trước:</b> 2 cổng USB-C (USB 3), Jack 3.5mm<br />
                    <b>Mặt sau:</b> Ethernet, HDMI, Thunderbolt 5, USB 4, DisplayPort
                </td>
            </tr>
        </table>
    </div>

    <script src="~/Content/sanpham.js"></script>
</main>
