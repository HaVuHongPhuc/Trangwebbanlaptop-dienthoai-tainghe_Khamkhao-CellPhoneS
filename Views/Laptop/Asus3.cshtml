@{
    ViewBag.Title = "AsusVivobookS16";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Thông tin sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/Asus3.png"
                 alt="Laptop ASUS Vivobook S16"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Thiết kế hiện đại, màu xanh cá tính, tạo điểm nhấn phong cách cho người dùng.</li>
                    <li>Vi xử lý Intel Core U7-255H mạnh mẽ, xử lý nhanh các tác vụ văn phòng, đồ họa, giải trí.</li>
                    <li>Màn hình 16” 3K OLED 120Hz hiển thị sắc nét, mượt mà, lý tưởng cho xem phim và chơi game.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Laptop ASUS Vivobook S16 S5606CA-RI171WS</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">27.190.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">U7-255H • 16GB • 512GB SSD</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/insecure/rs:fill:0:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/t/e/text_ng_n_4__7_256.png">
                        Xám
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Loại Card đồ họa</td><td>Intel Arc Graphics</td></tr>
            <tr><td>Dung lượng RAM</td><td>16GB</td></tr>
            <tr><td>Ổ cứng</td><td>512GB M.2 NVMe PCIe 4.0 SSD</td></tr>
            <tr><td>Kích thước màn hình</td><td>16 inches</td></tr>
            <tr>
                <td>Công nghệ màn hình</td>
                <td>
                    Độ sáng 400 nits • Độ sáng tối đa 600 nits HDR<br />
                    100% DCI-P3 • HDR True Black 600<br />
                    1.07 tỷ màu • TÜV Rheinland<br />
                    Giảm 70% ánh sáng xanh có hại
                </td>
            </tr>
            <tr><td>Pin</td><td>56 Wh, 4-cell Li-ion</td></tr>
            <tr><td>Hệ điều hành</td><td>Windows 11 Home + Microsoft Office Home 2024 + Microsoft 365 Basic</td></tr>
            <tr><td>Độ phân giải màn hình</td><td>2880 x 1800 pixels</td></tr>
        </table>
    </div>

    <!-- JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
