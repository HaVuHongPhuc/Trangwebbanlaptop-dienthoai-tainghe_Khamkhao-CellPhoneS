@{
    ViewBag.Title = "Dell_15_DC15255";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS chung -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Thông tin sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/Dell3.png"
                 alt="Laptop Dell 15 DC15255 DC5R5802W1"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Trang bị vi xử lý AMD Ryzen 5-7530U, cho hiệu suất mạnh mẽ trong công việc và học tập.</li>
                    <li>RAM 16GB, hỗ trợ đa nhiệm mượt mà, xử lý tốt các tác vụ nặng.</li>
                    <li>Ổ cứng SSD 512GB PCIe, tốc độ cao, nâng cấp tối đa 1TB.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Laptop Dell 15 DC15255 DC5R5802W1</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">15.990.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">R5-7530U • 16GB • 512GB SSD</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.fptshop.com.vn/unsafe/750x0/filters:format(webp):quality(75)/dell_15_dc15255_silver_01_03285b0875.png">
                        Bạc
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Loại Card đồ họa</td><td>AMD Radeon Graphics</td></tr>
            <tr><td>Dung lượng RAM</td><td>16GB</td></tr>
            <tr>
                <td>Ổ cứng</td>
                <td>512GB PCIe NVMe (nâng cấp tối đa 1TB, 1 khe SSD M.2)</td>
            </tr>
            <tr><td>Kích thước màn hình</td><td>15.6 inches</td></tr>
            <tr>
                <td>Cổng giao tiếp</td>
                <td>
                    1× USB 3.2 Gen1 Type-C (data only)<br />
                    1× USB 3.2 Gen1 Type-A<br />
                    1× USB 2.0<br />
                    1× HDMI 1.4<br />
                    1× Jack tai nghe 3.5mm<br />
                    1× Khe thẻ nhớ SD 3.0
                </td>
            </tr>
            <tr><td>Pin</td><td>41Wh • 3-cell</td></tr>
            <tr>
                <td>Hệ điều hành</td>
                <td>
                    Windows 11 Home Single Language (English)<br />
                    Office Home & Student 2024<br />
                    Microsoft 365 Basic (1 năm)
                </td>
            </tr>
            <tr><td>Độ phân giải màn hình</td><td>1920 × 1080 pixels (Full HD)</td></tr>
        </table>
    </div>

    <!-- JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
