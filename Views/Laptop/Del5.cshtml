@{
    ViewBag.Title = "Dell_Inspiron_14_5440";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS chung cho sản phẩm -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/Dell5.png"
                 alt="Laptop Dell Inspiron 14 5440"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Trang bị vi xử lý Intel Core 5-120U mạnh mẽ, hiệu suất cao trong công việc và học tập.</li>
                    <li>RAM 16GB hỗ trợ đa nhiệm mượt mà, xử lý nhiều tác vụ cùng lúc.</li>
                    <li>Ổ cứng SSD 512GB PCIe tốc độ cao, thoải mái lưu trữ tài liệu, hình ảnh, video.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Laptop Dell Inspiron 14 5440 N4I5211W1</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">22.890.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">Core5-120U • 16GB • 512GB SSD</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/insecure/rs:fill:0:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/t/e/text_ng_n_29__9_9_2.png">
                        Xanh
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Loại Card đồ họa</td><td>Intel Iris Xe Graphics</td></tr>
            <tr><td>Dung lượng RAM</td><td>16GB</td></tr>
            <tr><td>Ổ cứng</td><td>512GB M.2 PCIe NVMe</td></tr>
            <tr><td>Kích thước màn hình</td><td>14 inches</td></tr>
            <tr>
                <td>Cổng giao tiếp</td>
                <td>
                    2× USB 3.2 Gen 1 (5 Gbps)<br />
                    1× HDMI 1.4<br />
                    1× USB 3.2 Gen 2 (10 Gbps) Type-C (Power Delivery + DisplayPort 1.4)<br />
                    1× Jack tai nghe 3.5mm
                </td>
            </tr>
            <tr><td>Pin</td><td>54Wh • 4-cell</td></tr>
            <tr><td>Hệ điều hành</td><td>Windows 11 Home + Office Home & Student 2021</td></tr>
            <tr><td>Độ phân giải màn hình</td><td>1920 × 1200 pixels (FullHD+)</td></tr>
        </table>
    </div>

    <!-- JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
