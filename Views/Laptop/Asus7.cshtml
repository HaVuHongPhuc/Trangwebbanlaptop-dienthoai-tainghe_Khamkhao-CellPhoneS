@{
    ViewBag.Title = "AsusVivobook16X";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS mặc định -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Thông tin sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/Asus7.png"
                 alt="Laptop ASUS Vivobook 16X K3605VC-RP491W"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Trang bị Intel Core i7-13620H cho hiệu năng mạnh mẽ từ gaming đến xử lý video.</li>
                    <li>RAM 16GB + SSD 512GB PCIe, đảm bảo khả năng đa nhiệm và tốc độ lưu trữ cao.</li>
                    <li>Màn hình 16.0" WUXGA 144Hz sắc nét, tần số quét cao cho trải nghiệm mượt mà.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Laptop ASUS Vivobook 16X K3605VC-RP491W</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">19.990.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">i7-13620H • 16GB • 512GB SSD</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/insecure/rs:fill:0:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/t/e/text_ng_n_1__9_7.png">
                        Đen
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr>
                <td>Loại Card đồ họa</td>
                <td>
                    NVIDIA GeForce RTX 3050 4GB GDDR6<br />
                    Intel UHD Graphics
                </td>
            </tr>
            <tr><td>Dung lượng RAM</td><td>16GB</td></tr>
            <tr><td>Ổ cứng</td><td>512GB M.2 NVMe PCIe 4.0 SSD</td></tr>
            <tr><td>Kích thước màn hình</td><td>16 inches</td></tr>
            <tr>
                <td>Công nghệ màn hình</td>
                <td>
                    Độ sáng 300 nits • Độ phủ màu 45% NTSC<br />
                    Màn hình chống chói • TÜV Rheinland-certified
                </td>
            </tr>
            <tr><td>Pin</td><td>50 Wh, 3-cell Li-ion</td></tr>
            <tr><td>Hệ điều hành</td><td>Windows 11 Home</td></tr>
            <tr><td>Độ phân giải màn hình</td><td>1920 x 1200 pixels (WUXGA)</td></tr>
        </table>
    </div>

    <!-- JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
