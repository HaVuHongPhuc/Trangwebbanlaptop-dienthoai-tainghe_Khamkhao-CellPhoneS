@{
    ViewBag.Title = "Dell_15_DC15250";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS chung -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Thông tin sản phẩm -->
    <div class="product-detail">
        <!-- Cột trái -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/Dell2.png"
                 alt="Laptop Dell 15 DC15250 71073959"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Trang bị chip Intel Core i7-1355U, cho hiệu suất cao trong công việc và giải trí.</li>
                    <li>RAM 16GB, hỗ trợ đa nhiệm mượt mà, xử lý các tác vụ nặng hiệu quả.</li>
                    <li>Ổ cứng 512GB PCIe SSD, lưu trữ thoải mái tài liệu, hình ảnh và video.</li>
                </ul>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="product-right">
            <h2>Laptop Dell 15 DC15250 71073959</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">20.990.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">i7-1355U • 16GB • 512GB SSD</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/insecure/rs:fill:0:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/t/e/text_ng_n_2__10_102.png">
                        Bạc
                    </button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Loại Card đồ họa</td><td>Intel Iris Xe Graphics</td></tr>
            <tr><td>Dung lượng RAM</td><td>16GB</td></tr>
            <tr><td>Ổ cứng</td><td>512GB SSD</td></tr>
            <tr><td>Kích thước màn hình</td><td>15.6 inches</td></tr>
            <tr>
                <td>Cổng giao tiếp</td>
                <td>
                    1× USB 3.2 Gen 1 • 1× USB 2.0<br />
                    1× USB 3.2 Gen 1 Type-C (máy khung nhựa)<br />
                    1× USB 3.2 Gen 1 Type-C (DisplayPort Alt)<br />
                    1× Jack tai nghe 3.5mm
                </td>
            </tr>
            <tr><td>Pin</td><td>41 Wh • 3-cell</td></tr>
            <tr>
                <td>Hệ điều hành</td>
                <td>
                    Windows 11 Home • Office Home 2024 • Microsoft 365 Basic 1 năm<br />
                    McAfee LiveSafe 1 năm (5 thiết bị)
                </td>
            </tr>
            <tr><td>Độ phân giải màn hình</td><td>1920 × 1080 pixels (Full HD)</td></tr>
        </table>
    </div>

    <!-- JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
