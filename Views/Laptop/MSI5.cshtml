@{
    ViewBag.Title = "MSI_Gaming_Thin_15_B13UC_2081VN";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<head>
    <!-- CSS sản phẩm -->
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    <!-- Chi tiết sản phẩm -->
    <div class="product-detail">
        <!-- Bên trái: ảnh + mô tả nổi bật -->
        <div class="product-left">
            <img id="mainProductImage"
                 src="~/Content/Images/msi5.png"
                 alt="Laptop MSI Thin 15"
                 class="product-image" />

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Trang bị bộ vi xử lý Core i5-13420H, cho hiệu suất cao trong công việc và giải trí.</li>
                    <li>RAM 16GB, giúp đa nhiệm mượt mà và xử lý các tác vụ nặng.</li>
                    <li>Ổ cứng 512GB PCIe, lưu trữ thoải mái cho tài liệu, hình ảnh và video.</li>
                </ul>
            </div>
        </div>

        <!-- Bên phải: tên, giá, tùy chọn -->
        <div class="product-right">
            <h2>Laptop MSI Gaming Thin 15 B13UC-2081VN</h2>
            <p class="rating">⭐ 4.9 (343 đánh giá)</p>
            <p class="price">18.790.000₫</p>

            <!-- Phiên bản -->
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">i5-13420H • 16GB</button>
                </div>
            </div>

            <!-- Màu sắc -->
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/insecure/rs:fill:0:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/t/e/text_ng_n_64__2_2.png">
                        Xám
                    </button>
                </div>
            </div>

            <!-- Các nút hành động -->
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Loại Card đồ họa</td><td>NVIDIA GeForce RTX 3050 4GB GDDR6 128-bit</td></tr>
            <tr><td>Dung lượng RAM</td><td>16GB</td></tr>
            <tr><td>Ổ cứng</td><td>512GB SSD</td></tr>
            <tr><td>Kích thước màn hình</td><td>15.6 inches</td></tr>
            <tr><td>Công nghệ màn hình</td><td>Chống chói</td></tr>
            <tr><td>Pin</td><td>3-Cell</td></tr>
            <tr><td>Hệ điều hành</td><td>Windows 11 Home</td></tr>
            <tr><td>Độ phân giải màn hình</td><td>1920 × 1080 pixels (FullHD)</td></tr>
        </table>
    </div>

    <!-- Script JS -->
    <script src="~/Content/sanpham.js"></script>
</main>
