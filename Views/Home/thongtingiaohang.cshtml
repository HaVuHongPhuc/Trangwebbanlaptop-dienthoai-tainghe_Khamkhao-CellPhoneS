
@{
    ViewBag.Title = "thongtingiaohang";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Thông tin giao hàng</title>
    <link rel="stylesheet" href="~/Content/Thanhtoan.css" />
    <script src="~/Content/sanpham.js"></script>
</head>
<body>
    <main class="shipping-page">
        <h2>Thông tin giao hàng</h2>
        <form id="shippingForm" class="shipping-form">
            <div class="form-group">
                <label>Họ và tên</label>
                <input type="text" id="fullname" maxlength="30" placeholder="Nhập họ và tên">
                <small class="error"></small>
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="email" id="email" placeholder="Nhập email">
                <small class="error"></small>
            </div>

            <div class="form-group">
                <label>Số điện thoại</label>
                <input type="text" id="phone" maxlength="10" placeholder="Nhập số điện thoại">
                <small class="error"></small>
            </div>

            <div class="form-group">
                <label>Địa chỉ</label>
                <input type="text" id="address" placeholder="Nhập địa chỉ">
                <small class="error"></small>
            </div>

            <div class="form-group">
                <label>Tỉnh / Thành</label>
                <select>
                    <option>Chọn tỉnh / thành</option>
                    <option>Hà Nội</option>
                    <option>Hồ Chí Minh</option>
                    <option>Đà Nẵng</option>
                </select>
            </div>

            <div class="form-group">
                <label>Quận / Huyện</label>
                <select>
                    <option>Chọn quận / huyện</option>
                    <option>Quận 1</option>
                    <option>Quận 2</option>
                    <option>Quận 3</option>
                </select>
            </div>

            <button type="submit" class="submit-btn">Tiếp tục đến phương thức thanh toán</button>
        </form>
    </main>
</body>
</html>

