
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Dangnhap</title>
    <link rel="stylesheet" href="~/Content/CPS_LoginandRegister.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
    <div class="loginpage">
        <div class="uudai">
            <h2>
                Nhập hội khách hàng thành viên <strong style="color:red;">SMEMBER</strong><br />
                Để không bỏ lỡ các ưu đãi hấp dẫn từ CellphoneS
            </h2>
            <table class="tableuudai">
                <tr>
                    <td>
                        <i class="fa-solid fa-gift" style="color:red;"></i> <strong>Chiết khấu đến 5%</strong> khi mua các sản phẩm mua tại CellphoneS
                    </td>
                </tr>
                <tr>
                    <td> <i class="fa-solid fa-gift" style="color:red;"></i> <strong>Miễn phí giao hàng</strong>  cho thành viên SMEM, SVIP và cho đơn hàng từ 300.000đ</td>
                </tr>
                <tr>
                    <td> <i class="fa-solid fa-gift" style="color:red;"></i> Trợ giá thu cũ lên đời <strong>đến 1 triệu</strong></td>
                </tr>
                <tr>
                    <td> <i class="fa-solid fa-gift" style="color:red;"></i> <strong>Thăng hạng nhận voucher</strong> đến 300.000đ</td>
                </tr>
                <tr>
                    <td> <i class="fa-solid fa-gift" style="color:red;"></i> <strong>Đặc quyền S-Student/S-Teacher</strong> ưu đãi thêm đến 10%</td>
                </tr>
            </table>
        </div>
        <div class="login-container">
            <form class="loginform" action="/Home/CellPhoneS_Homepage">
                <h2><strong>Đăng nhập SMEMBER</strong></h2>

                <label>Số điện thoại:</label>
                <input type="text" placeholder="Nhập số điện thoại của bạn" />

                <label>Mật khẩu:</label>
                <input type="password" placeholder="Nhập mật khẩu của bạn" />
                <button type="submit" class="buttonlogin">Đăng Nhập</button>
                <a href="#" class="forgot">Quên mật khẩu?</a>
                <br />
                <p>
                    Bạn chưa có tài khoản? <a href="~/Home/Dangky">Đăng ký ngay</a>
                </p>
            </form>
        </div>
    </div>
</body>
</html>
