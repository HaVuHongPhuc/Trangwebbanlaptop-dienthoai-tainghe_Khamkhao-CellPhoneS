
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>Đăng ký SMEMBER</title>
    <link rel="stylesheet" href="~/Content/CPS_LoginandRegister.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
    <div class="register">
        <h1 style="color:red">Đăng ký trở thành SMEMBER</h1>

        <p>Đăng ký bằng tài khoản mạng xã hội</p>
        <div class="social-buttons">
            <button class="social google">Google</button>
            <button class="social zalo">Zalo</button>
        </div>

        <p><i>Hoặc điền thông tin sau</i></p>
        <form action="/Home/CellPhoneS_Homepage">
            <h3>Thông tin cá nhân</h3>
            <table class="formtable">
                <tr>
                    <td>
                        <label>Họ và tên</label><br>
                        <input type="text" placeholder="Nhập họ và tên của bạn">
                    </td>
                    <td>
                        <label>Ngày sinh</label><br>
                        <input type="date">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Số điện thoại</label><br>
                        <input type="text" placeholder="Nhập số điện thoại của bạn">
                    </td>
                    <td>
                        <label>Email (không bắt buộc)</label><br>
                        <input type="email" placeholder="Nhập email">
                    </td>
                </tr>
            </table>

            <h3>Thông tin đăng nhập</h3>
            <table class="formtable">
                <tr>
                    <td>
                        <label>Tên đăng nhập</label><br>
                        <input type="text" placeholder="Nhập tên đăng nhập của bạn">
                    </td>
                    </tr>
                <tr>
                    <td>
                        <label>Mật khẩu</label><br>
                        <input type="password" placeholder="Nhập mật khẩu của bạn">
                    </td>
                    <td>
                        <label>Nhập lại mật khẩu</label><br>
                        <input type="password" placeholder="Nhập lại mật khẩu">
                    </td>
                </tr>
            </table>
            <table class="formtabledone">
                <tr>
                    <td style="text-align:right"><button type="submit" class="submit">Hoàn tất đăng ký</button></td>
                    <td style="text-align:left"><button type="submit" class="submit">Quay lại đăng nhập</button></td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>
