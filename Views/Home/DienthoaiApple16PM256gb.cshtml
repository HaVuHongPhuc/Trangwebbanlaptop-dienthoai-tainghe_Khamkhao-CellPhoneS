@{
    ViewBag.Title = "DienthoaiApple16PM256gb";
    Layout = "~/Views/Home/CellPhoneS_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/Content/SanPham.css" />
</head>

<main class="main">
    @*Thông tin sản phẩm*@
    <div class="product-detail">
        @*Hình ảnh + mô tả nổi bật*@
        <div class="product-left">
            <img id="mainProductImage"
                 src="https://cdn2.cellphones.com.vn/358x/media/catalog/product/i/p/iphone-16-pro-max-titan-tu-nhien.png"
                 alt="iPhone 16 Pro Max 256GB" class="product-image">

            <div class="highlight-box">
                <h3>TÍNH NĂNG NỔI BẬT</h3>
                <ul>
                    <li>Thiết kế titan sang trọng, màn hình Super Retina XDR 6.9 inch.</li>
                    <li>Chip A18 Pro tối ưu hiệu năng chơi game và xử lý AI.</li>
                    <li>Camera 48MP + Tele 5x, quay video chuẩn điện ảnh.</li>
                </ul>
            </div>
        </div>

        @*Giá + tùy chọn*@
        <div class="product-right">
            <h2>Iphone 16 Pro Max 256GB | Chính hãng VN/A</h2>
            <p class="rating">⭐ 4.9 (512 đánh giá)</p>
            <p class="price">30.590.000đ</p>

            @*Chọn phiên bản*@
            <div class="options">
                <h4>Phiên bản</h4>
                <div class="option-list">
                    <button class="option selected">256GB</button>
                </div>
            </div>

            @*Chọn màu*@
            <div class="options">
                <h4>Màu sắc</h4>
                <div class="option-list">
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/i/p/iphone-16-pro-max-titan-tu-nhien.png">
                        Titan Tự Nhiên
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/i/p/iphone-16-pro-max-titan-sa-mac_1.png">
                        Titan Sa Mạc
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/i/p/iphone-16-pro-max-titan-trang_2.png">
                        Titan Trắng
                    </button>
                    <button class="option color-option"
                            data-img="https://cdn2.cellphones.com.vn/358x/media/catalog/product/i/p/iphone-16-pro-max-titan-den_2.png">
                        Titan Đen
                    </button>
                </div>
            </div>

            @*Cụm nút hành động*@
            <div class="action-buttons">
                <button class="btn-installment">Trả góp 0%</button>
                <button class="btn-buy">Mua ngay</button>
                <button class="btn-cart">Thêm vào giỏ</button>
            </div>
        </div>
    </div>

    @*Thông số kỹ thuật*@
    <div class="specs">
        <h3>Thông số kỹ thuật</h3>
        <table>
            <tr><td>Kích thước màn hình</td><td>6.9 inches Super Retina XDR OLED</td></tr>
            <tr><td>Công nghệ màn hình</td><td>ProMotion 120Hz, Dynamic Island, Always-On</td></tr>
            <tr><td>Camera sau</td><td>48MP + 12MP Ultra Wide + Tele 5x</td></tr>
            <tr><td>Camera trước</td><td>12MP TrueDepth</td></tr>
            <tr><td>Chipset</td><td>Apple A18 Pro</td></tr>
            <tr><td>Bộ nhớ trong</td><td>256 GB</td></tr>
            <tr><td>Hệ điều hành</td><td>IOS 18</td></tr>
        </table>
    </div>
    <script src="~/Content/sanpham.js"></script>
</main>
